<h1>All the Books</h1>
<%= link_to "Add a Book", new_book_path, { :class => "button waves-effect waves-light btn" } %>
<br><br>

<table class="striped bordered">
  <tr>
    <th>book name</th>
    <th>description</th>
    <th>author name</th>
    <th>poster</th>
    <th>rating</th>
  </tr>

  <% @books.each do |book| %>
      <tr>
      <td><%= link_to book.book_name, book_path(book) %></td>
        <td><%= book.description %></td>
        <td><%= book.author_name %></td>
        <td><%= book.poster%></td>
        <td><%= book.rating%></td>
	      
	                 
        <td><a class="btn-floating btn-large red" href="<%= edit_book_path(book) %>" >
        <em class="large material-icons">Edit</em>
       </a>
     </td>
     <td> 
           <%= button_to "Delete", book_path(book.id), method: :delete,
              data: { confirm: "Are you sure?" } %>
              </td>
      </tr>
  <% end %>
</table>