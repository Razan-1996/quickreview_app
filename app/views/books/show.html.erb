
<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
       
 <p><%= image_tag(@book.poster, size: "260x260", alt: "Book Image") %> </p>

 <h4>Category: <%= @book.category.name %></h4>
<div class="star-rating" data-score= <%= @avg_review %> ></div>


        <div class="star-rating" data-score= <%= @avg_review %> ></div>
    
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong class="white" >Title:</strong></td>
                <td><div class="white" ><%= @book.book_name %></div></td>
              </tr>
              <tr>
                <td><strong class="white" >Description:</strong></td>
                <td><div class="white" ><%= @book.description %></div></td>
              </tr>
              <tr>
                <td><strong class="white" >Book Author:</strong></td>
                <td><div class="white" ><%= @book.author_name %></div></td>
              </tr>
             
              <tr>
                <td><strong class="white" >Rating:</strong></td>
                <td><div class="white" ><%= @book.rating %></div></strong></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
     
        
        <% if @book.reviews.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <% else %>
          
           
            <%= render @book.reviews %>
           
            <% end %>

            <%=link_to 'Write a Review', new_book_review_path(@book), class: "btn btn-danger" %>


      </div>
    </div>
  </div>
</div>

<%= link_to "Edit", edit_book_path(@book) %>

<% if user_signed_in? %>
<% if @book.user_id == current_user.id %>
<%= button_to "Delete", book_path(@book), method: :delete,
data: { confirm: "Are you sure?" } %>
<%= link_to 'Back', books_path %>

<% end %>
<% end %>
 
